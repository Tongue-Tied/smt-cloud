.m-msg {
  width: 100%;
}
.m-msg .fk_box {
  background: #ffffff;
  width: 600rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-top: 30rpx;
  margin: 0 auto;
}
.m-msg .fk_box .input_box {
  width: 80%;
  background: #f3f3f3;
  border-radius: 40rpx;
  height: 80rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
}
.m-msg .fk_box .input_box input {
  padding-left: 40rpx;
  width: 100%;
  height: 100%;
  font-size: 28rpx!important;
  color: #5c636a;
}
.m-msg .fk_box .input_box input {
  font-size: 28rpx;
  color: #5c636a;
}
.m-msg .fk_box .input_box textarea {
  font-size: 28rpx;
  color: #5c636a;
}
.m-msg .fk_box .text_area {
  height: 240rpx;
  position: relative;
  font-size: 28rpx!important;
}
.m-msg .fk_box .text_area textarea {
  color: #5c636a;
  width: 90%;
  padding: 20rpx 38rpx;
  font-size: 28rpx!important;
}
.m-msg .fk_box .text_area .textarea_p {
  color: #808080 !important;
  font-size: 28rpx!important;
}
.m-msg .fk_box .text_area ._div {
  position: absolute;
  bottom: 20rpx;
  right: 0;
}
 .icon_box {
  top: 12% !important;
}
