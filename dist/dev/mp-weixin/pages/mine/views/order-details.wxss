  padding: 20rpx;
  width: 90%;
  overflow: hidden;
}
.order_details .fk_box .text_area {
  height: 240rpx;
  position: relative;
  font-size: 28rpx;
}
.order_details .fk_box .text_area ._div {
  position: absolute;
  bottom: 20rpx;
  right: 0;
}
.order_details .icon_box {
