page {
  background: #f5f5f5;
}
.message_detail {
  padding: 0 30rpx;
}
.message_detail ._div,
.message_detail ._span {
  font-size: 28rpx;
}
.message_detail .m_item {
  background: #ffffff;
  border-radius: 30rpx;
  margin-top: 30rpx;
  padding: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  box-shadow: 0 0 10rpx 5rpx #eeeeee;
}
.message_detail .m_item .top {
  width: 100%;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e9e9e9;
}
.message_detail .m_item .top :nth-child(1) {
  color: #333333;
  font-size: 32rpx;
}
.message_detail .m_item .top :nth-child(2) {
  padding-top: 20rpx;
  color: #999999;
  font-size: 26rpx;
}
.message_detail .m_item .bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-top: 40rpx;
  color: #333333;
  font-size: 26rpx;
}
