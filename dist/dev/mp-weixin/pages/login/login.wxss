page {
  background-color: white;
}
.login-panel {
  min-height: calc(100vh - 0px);
  background-color: white;
}
.login-panel .login_head {
  text-align: center;
  padding-bottom: 100rpx;
}
.login-panel .login_head .login_logo {
  width: 130rpx;
  height: 130rpx;
  margin: 0 auto;
}
.login-panel .login_head .login_logo image {
  width: 100%;
  height: 100%;
}
.login-panel .login_head .login_title {
  font-size: 15px;
  font-weight: bold;
  font-family: Source Han Sans CN;
}
.login-panel .login_head .login_sub {
  font-size: 12px;
  color: #333333;
}
.login-panel .wechat_icon {
  padding-top: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  width: 100%;
  text-align: center;
  color: #333333;
}
.login-panel .my_input {
  width: 570rpx;
  margin: 0 auto;
  border-radius: 60rpx;
  margin-top: 10rpx;
  background: #f5f5f5;
  margin-top: 20rpx;
}
.login-panel .my_input .u-field {
  width: 610rpx;
  margin: 20rpx auto;
  background: #f5f5f5;
  border-radius: 60rpx;
  position: unset;
}
.login-panel .u-border,
.login-panel .u-border-bottom,
.login-panel .u-border-left,
.login-panel .u-border-right,
.login-panel .u-border-top,
.login-panel .u-border-top-bottom {
  position: unset;
}
.login-panel .login-logo {
  width: 280rpx;
  margin: 0 auto;
}
.login-panel .login-logo .ll-img {
  width: 100%;
}
.login-panel input {
  font-size: 28rpx;
}
.login-panel .code_box {
  position: absolute;
  right: 240rpx;
  top: 50%;
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
  width: 60rpx;
  z-index: 1000;
}
.login-panel .code_box button {
  width: auto;
  height: 56rpx !important;
  padding: 0 20rpx;
}
.login-panel .forget_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 570rpx;
  margin: 0 auto;
  padding-top: 20rpx;
}
.login-panel .forget_box .forget {
  font-size: 24rpx;
}
.login-panel .forget_box .register ._span {
  font-size: 24rpx;
}
.login-panel .forget_box .register :nth-child(2) {
  color: #ff2724;
  border-bottom: 2rpx solid #ff2724;
  padding-bottom: 2rpx;
}
.login-panel .code_input {
  width: 610rpx;
  margin: 0 auto;
  border-radius: 60rpx;
  margin-top: 10rpx;
  background: #f5f5f5;
  margin-top: 20rpx;
  font-size: 28rpx;
  padding: 20rpx 28rpx;
  text-align: left;
  position: relative;
  color: #5c636a;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.login-panel .code_input .type_icon {
  height: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
}
.login-panel .code_input .type_icon .type_box {
  padding: 0 10rpx;
}
.login-panel .code_input .type_icon .fixed_box {
  position: absolute;
  width: 300rpx;
  top: 50rpx;
  left: 30rpx;
  background: #ffffff;
  -webkit-transition-duration: 0.2s;
          transition-duration: 0.2s;
  box-shadow: 0 0 70rpx 5rpx #eeeeee;
  z-index: 1000000;
  padding: 0 30rpx;
}
.login-panel .code_input .type_icon .fixed_box .s_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border-bottom: 2rpx solid #eeeeee;
}
