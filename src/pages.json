{
    "easycom": {
        "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
        "^m-(.*)": "@/components/m-$1.vue"
    },
    "cloud": true,
    "pages": [
        {
            "path": "pages/login/login",
            "style": {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
        },
        {
            "path": "pages/index/index",
            "style": {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": true,
                "navigationStyle": "custom", // 可以去掉小程序端的顶部导航
                "app-plus": {
                    "titleNView": false // 去掉APP、H5的顶部导航
                }
            }
        },
        {
            "path": "pages/training/index",
            "style": {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": true,
                "navigationStyle": "custom", 
                "app-plus": {
                    "titleNView": false
                }
            }
        },
        {
            "path": "pages/mine/index",
            "style": {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": true,
                "navigationStyle": "custom", 
                "app-plus": {
                    "titleNView": false
                }
            }
        },
        {
            "path": "pages/index/shopping-car/shopping-car",
            "style": {
                "navigationBarTitleText": "购物车",
                "navigationBarBackgroundColor": "#ffffff",
                "navigationBarTextStyle": "black",
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/index/address/address",
            "style": {
                "navigationBarTitleText": "修改收货地址",
                "navigationBarBackgroundColor": "#ffffff",
                "navigationBarTextStyle": "black",
                "enablePullDownRefresh": true
            }
        }
    ],
    "subPackages": [
        {
            "root": "pages/index/shop/",
            "pages": [
                
                {
                    "path": "shop-list",
                    "style": {
                        "navigationStyle": "custom",
                        "navigationBarTitleText": "弱视用品商城",
                        "navigationBarBackgroundColor": "#ffffff",
                        "navigationBarTextStyle": "black",
                        "enablePullDownRefresh": true
                    }
                },
                {
                    "path": "shop-detail",
                    "style": {
                        "navigationStyle": "custom",
                        "enablePullDownRefresh": false
                    }
                },
                {
                    "path": "shop-pay",
                    "style": {
                        "navigationBarTitleText": "确认订单",
                        "navigationBarBackgroundColor": "#ffffff",
                        "navigationBarTextStyle": "black",
                        "enablePullDownRefresh": true
                    }
                }
            ]
        },
        {
            "root": "pages/score/",
            "pages": [
                
                {
                    "path": "score-record",
                    "style": {
                        "navigationBarTitleText": "积分记录",
                        "navigationBarBackgroundColor": "#ffffff",
                        "navigationBarTextStyle": "black",
                        "enablePullDownRefresh": true
                    }
                },
                {
                    "path": "score-strategy",
                    "style": {
                        "navigationBarTitleText": "积分获取攻略",
                        "navigationBarBackgroundColor": "#ffffff",
                        "navigationBarTextStyle": "black",
                        "enablePullDownRefresh": false
                    }
                },
                {
                    "path": "score-shop",
                    "style": {
                        "navigationBarTitleText": "积分兑换商城",
                        "navigationBarBackgroundColor": "#ffffff",
                        "navigationBarTextStyle": "black",
                        "enablePullDownRefresh": false
                    }
                }
            ]
        }
    ],
    "globalStyle": {
        // #ifdef H2
        "navigationStyle": "custom",
        // #endif
        "navigationBarTitleText": "弱视训练宝",
        "navigationBarBackgroundColor": "#ffffff",
        "navigationBarTextStyle": "black",
        "backgroundColor": "#ffffff",
        "backgroundTextStyle": "light",
        "backgroundColorTop": "#eeeeee",
        "backgroundColorBottom": "#efefef"
    },
    "tabBar": {
        "color": "#9AA5B1",
        "selectedColor": "#000000",
        "backgroundColor": "#ffffff",
        "borderStyle": "black",
        "list": [
            {
                "pagePath": "pages/index/index",
                "iconPath": "static/imgs/index/home.png",
                "selectedIconPath": "static/imgs/index/homeActive.png",
                "text": "首页"
            },
            {
                "pagePath": "pages/training/index",
                "iconPath": "static/imgs/index/training.png",
                "selectedIconPath": "static/imgs/index/trainingActive.png",
                "text": "开始训练"
            },
            {
                "pagePath": "pages/mine/index",
                "iconPath": "static/imgs/index/mine.png",
                "selectedIconPath": "static/imgs/index/mineActive.png",
                "text": "我的"
            }
        ]
    }
}
